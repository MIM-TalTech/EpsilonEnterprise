@page
@model EpsilonEnterprise.Pages.Assignmentss.IndexModel

@{
    ViewData["Title"] = "Assignments";
}

<h1>Courses</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assignments[0].AssignmentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignments[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignments[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignments[0].Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Assignments) 
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignmentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
            <td>
            @if (item.OfficeAssignment != null)
            {
                @item.OfficeAssignment.Location
            }
            </td>
            <td>
                @{
                    foreach (var assignment in item.AssignmentAssignment)
                    {
                        @assignment.Assignment.AssignmentID @:  @assignment.Assignment.Title <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.AssignmentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AssignmentID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AssignmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
