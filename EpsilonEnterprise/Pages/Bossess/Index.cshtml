@page "{id:int?}"
@model EpsilonEnterprise.Pages.Bossess.IndexModel

@{
    ViewData["Title"] = "Bosses";
}

<h2>Bosses</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Hire Date</th>
            <th>Office</th>
            <th>Assignments</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BossData.Bosses)
        {
            string selectedRow = "";
            if (item.ID == Model.BossID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.BossData.Assignments != null)
{
    <h3>Assignments Overlooked by Selected Boss</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Number</th>
            <th>Title</th>
            <th>Department</th>
        </tr>

        @foreach (var item in Model.BossData.Assignments)
        {
            string selectedRow = "";
            if (item.AssignmentID == Model.AssignmentID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    <a asp-page="./Index" asp-route-courseID="@item.AssignmentID">Select</a>
                </td>
                <td>
                    @item.AssignmentID
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Department.Name
                </td>
            </tr>
        }

    </table>
}

@if (Model.BossData.Enrollments != null)
{
    <h3>
        Employees Enrolled in Selected Assignment
    </h3>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Grade</th>
        </tr>
        @foreach (var item in Model.BossData.Enrollments)
        {
            <tr>
                <td>
                    @item.Employee.FullName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pay)
                </td>
            </tr>
        }
    </table>
}