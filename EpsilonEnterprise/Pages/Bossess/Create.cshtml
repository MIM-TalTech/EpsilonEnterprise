@page
@model EpsilonEnterprise.Pages.Bossess.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bosses</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bosses.LastName" class="control-label"></label>
                <input asp-for="Bosses.LastName" class="form-control" />
                <span asp-validation-for="Bosses.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bosses.FirstMidName" class="control-label"></label>
                <input asp-for="Bosses.FirstMidName" class="form-control" />
                <span asp-validation-for="Bosses.FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bosses.HireDate" class="control-label"></label>
                <input asp-for="Bosses.HireDate" class="form-control" />
                <span asp-validation-for="Bosses.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bosses.OfficeAssignment.Location" class="control-label"></label>
                <input asp-for="Bosses.OfficeAssignment.Location" class="form-control" />
                <span asp-validation-for="Bosses.OfficeAssignment.Location" class="text-danger" />
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                foreach (var course in Model.AssignedCourseDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedAssignments"
                                               value="@course.AssignmentID"
                                               @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) />
                                        @course.AssignmentID @:  @course.Title
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }